    <!-- Page Content -->
    <div class="container" style="min-height: 83vh;">
        <div class="row" style="height: 10%; width: 100%; background-color: white;">
            <div class="col col-lg-8 col-md-8">
                <div class="row">
                    &nbsp;
                </div>
                <div class="row">
                    &nbsp;
                </div>
                <div class="row display-3" style="width: 100%;">
                    <%= courseInfo.courseName %>
                </div>
                <div class="row lead" style="width: 100%;">
                    <%= courseInfo.courseDescription %>
                </div>
                <div class="row">
                    &nbsp;
                </div>
                <div class="row h4" style="width: 100%;">
                    <small>Created By: <u><%= courseInfo.instructorName %></u></small>
                </div>
                <div class="row h4" style="width: 100%;">
                    <div class="col col-lg-6 col-md-6 text-left" style="padding: 0px;">
                        <span class="text-left"><small>Language: <em><%= courseInfo.courseLanguage %></em></small></span>
                    </div>
                    <div class="col col-lg-6 col-md-6 text-right">
                        <span class="text-right"><small>Duration: <em><%= courseInfo.courseDuration %> hrs</em></small></span>
                    </div>
                </div>
                <div class="row">
                    &nbsp;
                </div>

            </div>
            <div class="col col-lg-4 col-md-4" style="text-align: center;padding: 1rem;">
                <div class="row">
                    &nbsp;
                </div>
                <div class="row">
                    &nbsp;
                </div>
                <%if(courseInfo.courseThumbnailUrl!=null){%>
                    <div class="row">
                        <img src="<%=courseInfo.courseThumbnailUrl%>" alt="image here" class="img-thumbnail" style="max-width:80%;max-height: 150px;">
                    </div>
                    <%}else{%>
                        <div class="row">
                            <img src="https://image.flaticon.com/icons/svg/194/194936.svg" alt="image here" class="img-thumbnail">
                        </div>
                        <%}%>

            </div>

        </div>
        <div class="row" style="height: 90%;width: 100% ; margin-top: 2%;">
            <div class="col col-lg-8 col-md-8" id="LectureSection">
                <div class="row h3">
                    <div class="col col-6 text-left" style="padding-left:0px ;">
                        <%=lesson.lessonInfo.lessonName%>
                    </div>
                    <div class="col col-6 text-right">
                        <!-- buttons here -->
                    </div>
                </div>
                <div class="row">
                    &nbsp;
                </div>

                <% for(var i=0;i< lesson.lessonInfo.noOfLectures;i++){ %>
                    <div class="row">
                        <div class="card" style="width: 100%;">
                            <%if(lectures[i]!=null){%>
                                <div class="card-header">
                                    <div class="row">
                                        <div class="col col-6 lead">
                                            Lecture
                                            <%=i+1%>
                                        </div>
                                        <div class="col col-6 text-right">
                                            <!-- progress here -->
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="card-title h5" id="lectureName<%=i+1%>">
                                        <%= lectures[i].lectureInfo.lectureName %>
                                    </div>
                                    <span hidden id="lectureId<%=i+1%>"><%=lectures[i].lectureId%></span>
                                    <div class="card-text">
                                        <ul style="list-style-type:circle">
                                            <li id="lectureDescription<%=i+1%>">
                                                <%= lectures[i].lectureInfo.lectureDescription %>
                                            </li>

                                        </ul>
                                    </div>
                                    <%if( lectures[i].lectureInfo.lectureVideoUrl !=null ){%>
                                        <div class="card-text">
                                            <ul style="list-style-type:none">
                                                <li>
                                                    <a href="/playlecturevideo/<%=courseId%>/<%=lesson.lessonId%>/<%=lectures[i].lectureId%>" class=" UpdateVideoBtn" type="" id="<%=i+1%>"><i class="fas fa-play fa-lg" href="<%=lectures[i].lectureInfo.lectureVideoUrl%>"> Lecture</i></a>
                                                </li>
                                            </ul>
                                        </div>
                                        <%}else{%>
                                            <div class="card-text">
                                                <ul style="list-style-type:none">
                                                    <li>
                                                        video Not Uploaded Yet
                                                    </li>
                                                </ul>
                                            </div>
                                            <%}%>
                                </div>
                                <%}else{%>
                                    <div class="card-header">
                                        <div class="row">
                                            <div class="col col-6 lead">
                                                Lecture Not added
                                            </div>
                                            <div class="col col-6 text-right">

                                            </div>
                                        </div>
                                    </div>
                                    <%}%>

                        </div>
                    </div>

                    <div class="row">&nbsp;</div>
                    <%}%>

                        <div class="row">&nbsp;</div>
            </div>
        </div>
        <!-- Add Lecture Modal  -->
        <div class="modal fade" id="AddLectureModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalCenterTitle">Add Lecture</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/addlecturedb/<%=courseId%>/" id="AddLectureForm">
                            <div class="form-group">
                                <input type="hidden" id="LessonId" name="LessonId" class="form-control" value="<%=lesson.lessonId%>" required>
                                <!-- <input type="hidden" name="LectureName" class="form-control" id="LectureName" aria-describedby="LectureNameHelp" required> -->
                            </div>

                            <div class="form-group">
                                <label for="LessonName">Lecture Name</label>
                                <input type="text" name="LectureName" class="form-control" id="AddLectureName" aria-describedby="LectureNameHelp" required>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Lecture Description</label>
                                <textarea class="form-control" name="LectureDescription" id="AddLectureDescription" rows="auto" required></textarea>
                            </div>


                            <div class="form-group">
                                <strong id="res"></strong>
                            </div>
                            <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" id="AddLessonBtn">Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Edit Lecture Modal  -->
        <div class="modal fade" id="EditLectureModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalCenterTitle">Edit Lecture</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/editlecturedb/<%=courseId%>/" id="AddLectureForm">
                            <div class="form-group">
                                <input type="hidden" id="LessonId" name="LessonId" class="form-control" value="<%=lesson.lessonId%>" required>
                                <input type="hidden" id="EditLectureId" name="EditLectureId" class="form-control" value="" required>
                                <!-- <input type="hidden" name="LectureName" class="form-control" id="LectureName" aria-describedby="LectureNameHelp" required> -->
                            </div>

                            <div class="form-group">
                                <label for="LessonName">Lecture Name</label>
                                <input type="text" name="EditLectureName" class="form-control" id="EditLectureName" aria-describedby="LectureNameHelp" required>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Lecture Description</label>
                                <textarea class="form-control" name="EditLectureDescription" id="EditLectureDescription" rows="auto" required></textarea>
                            </div>
                            <div class="form-group">
                                <strong id="res"></strong>
                            </div>
                            <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" id="EditLessonBtn">Edit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
