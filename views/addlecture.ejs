    <script>
        // console.log("index.ejs");
        var firebaseConfig = {
            apiKey: "AIzaSyAgBh_SBTl4Wc8ugH2EDchLJRqKnO2dAJI",
            authDomain: "music-academy-2341.firebaseapp.com",
            databaseURL: "https://music-academy-2341.firebaseio.com",
            projectId: "music-academy-2341",
            storageBucket: "music-academy-2341.appspot.com",
            messagingSenderId: "379322040304",
            appId: "1:379322040304:web:e171f5a89796acc871e735",
            measurementId: "G-2MHG9QDRM3"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        $('.UploadLectureVideo').change(function() {
            console.log("upload change");
            var file = $(this).prop('files')[0];
            var id = $(this).attr("id");
            var lectureId = $('#lectureId' + id).html().trim();
            var storageRef = firebase.storage().ref();
            var filelocation = 'app/user/instructor/<%-userId%>/courses/<%-courseId%>/lessons/<%-lesson.lessonId%>/lectures/' + lectureId + '/' + file.name;

            //upload file
            var task = storageRef.child(filelocation).put(file);
            //update progress


            task.on('state_changed',
                function progress(snapshot) {

                    switch (snapshot.state) {
                        case firebase.storage.TaskState.PAUSED: // or 'paused'
                            console.log('Upload is paused');
                            break;
                        case firebase.storage.TaskState.RUNNING: // or 'running'
                            var progress = (snapshot.bytesTransferred / snapshot.totalBytes) * 100;
                            console.log("#progress" + id);
                            $("#progress" + id).attr("hidden", false);
                            $("#progress-bar" + id).css("width", progress + "%");
                            $("#progress-bar" + id).html(progress.toFixed(1) + "%");
                            console.log('Upload is ' + progress.toFixed(1) + '% done');
                            console.log('Upload is running');
                            break;
                    }
                },
                function(error) {

                    // A full list of error codes is available at
                    // https://firebase.google.com/docs/storage/web/handle-errors
                    switch (error.code) {
                        case 'storage/unauthorized':
                            // User doesn't have permission to access the object
                            console.log('Unauthorized User Accesing Storage');
                            break;

                        case 'storage/canceled':
                            // User canceled the upload
                            console.log('Upload Canceled');
                            break;
                        case 'storage/unknown':
                            // Unknown error occurred, inspect error.serverResponse
                            break;
                    }
                },
                function() {
                    // Upload completed successfully, now we can get the download URL
                    task.snapshot.ref.getDownloadURL().then(function(downloadURL) {
                        console.log('File available at', downloadURL);
                        $('#LectureVideoUrl' + id).val(downloadURL);
                        $('.UploadLectureBtn').attr("hidden", false);
                    });
                });
        });

        $('.UpdateVideoBtn').click(function() {
            var id = $(this).attr("id");
            $(this).attr("hidden", true);
            $("#UpdateVideoCardText" + id).attr("hidden", false);
        });

        $('.EditLectureBtn').click(function() {
            console.log('Edit Lecture clicked');
            var id = $(this).attr("id");
            var lectureId = $('#lectureId' + id).html().trim();
            var lectureName = $('#lectureName' + id).html().trim();
            var lectureDescription = $('#lectureDescription' + id).html().trim();
            $('#EditLectureId').val(lectureId);
            $('#EditLectureName').val(lectureName);
            $('#EditLectureDescription').val(lectureDescription);
            console.log(id + " " + lectureId + " " + lectureName + " " + lectureDescription);
        });

        $('#LogOutBtn').click(function() {
            console.log('Log Out clicked');
            firebase.auth().signOut().then(function() {
                // Sign-out successful.
                window.location.replace("/logout");
            }).catch(function(error) {
                // An error happened.
            });
        });
